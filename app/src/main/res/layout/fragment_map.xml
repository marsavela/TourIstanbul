<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lbs.erasmus.touristanbul.fragments.MapFragment">

    <org.mapsforge.map.android.view.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_gravity="right|bottom">

        <Button
            android:layout_width="@dimen/map_button_size"
            android:layout_height="@dimen/map_button_size"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:id="@+id/mapfragment_button_zoomIn"
            android:drawableTop="@drawable/ic_zoom_in"/>
        <Button
            android:layout_width="@dimen/map_button_size"
            android:layout_height="@dimen/map_button_size"
            android:padding="0dp"
            android:layout_marginTop="8dp"
            android:id="@+id/mapfragment_button_zoomOut"
            android:drawableTop="@android:drawable/btn_minus"/>

        <Button
            android:layout_width="@dimen/map_button_size"
            android:layout_height="@dimen/map_button_size"
            android:padding="0dp"
            android:id="@+id/mapfragment_button_location"
            android:drawableTop="@drawable/ic_access_location"/>

    </LinearLayout>

</FrameLayout>
