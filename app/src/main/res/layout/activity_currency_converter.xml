<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabLayoutFrom"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="From"
            android:id="@+id/From"
            android:textSize="20sp"
            android:textAlignment="gravity"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/currencyOri"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:tag="0"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"
            android:gravity="center" />

        <Button
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:text="@string/changeCurrency"
            android:id="@+id/changeCurrency"
            android:layout_weight="1"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="To"
            android:id="@+id/to"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/turkeyLira"
            android:id="@+id/destinyCurrency"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="150dp" />

        <EditText
            android:id="@+id/entry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Insert Quantity"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:id="@+id/exit"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="250dp"
            android:numeric="decimal"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/converter"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
