<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabLayoutFrom"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/from"
        android:id="@+id/From"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/currencyOri"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:tag="0"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="@string/change_currency"
        android:id="@+id/changeCurrency"
        android:layout_weight="1"
        android:layout_marginTop="70dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/to"
        android:id="@+id/to"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="@string/turkey_lira"
        android:id="@+id/destinyCurrency"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_weight="5"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="100dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/entry"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Insert Quantity"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginRight="30dp">

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="@string/currencyExchange"
        android:id="@+id/currencyExchange"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:textSize="20sp"
        android:layout_marginLeft="340dp"
        android:layout_marginRight="30dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:id="@+id/exit"
        android:numeric="decimal"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:textSize="35dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="220dp" />

    <Button
        android:id="@+id/converter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/converter"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp" />

</RelativeLayout>
